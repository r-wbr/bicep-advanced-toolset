{
    "displayName": "Restrict resource deployment to specific regions",
    "description": "This policy restricts the regions where resources can be deployed to the locations given in the parameter 'allowedLocationsList'.",
    "policyType": "Custom",
    "mode": "Indexed",
    "metadata":{
        "version": "1.0.1",
        "category": "Resource Organization"
    },
    "parameters": {
        "allowedLocationsList": {
            "type": "Array",
            "metadata": {
                "description": "The list of locations that resources can be created in.",
                "strongType": "location",
                "displayName": "Allowed locations"
            }
        }
    },
    "policyRule": {
        "if": {
            "allOf": [
                {
                    "field": "location",
                    "notIn": "[parameters('allowedLocationsList')]"
                },
                {
                    "field": "location",
                    "notEquals": "global"
                },
                {
                    "field": "type",
                    "notEquals": "Microsoft.AzureActiveDirectory/b2cDirectories"
                },
                {
                    "field": "type",
                    "notEquals": "Microsoft.Insights/scheduledqueryrules"
                }
            ]
        },
        "then": {
            "effect": "deny"
        }
    }
}